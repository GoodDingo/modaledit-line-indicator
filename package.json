            "fontStyle": {
              "type": "string",
              "enum": ["normal", "italic", "oblique"]
            },
            "fontWeight": { "type": "string" },
            "letterSpacing": { "type": "string" },
            "textDecoration": { "type": "string" },
            "cursor": { "type": "string" },
            "overviewRulerColor": { "type": "string" },
            "overviewRulerLane": {
              "type": "string",
              "enum": ["Left", "Center", "Right", "Full"]
