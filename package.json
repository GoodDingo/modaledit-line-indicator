            "gutterIconPath": { "type": "string" },
            "gutterIconSize": { "type": "string" },
            "rangeBehavior": {
              "type": "string",
              "enum": ["OpenOpen", "ClosedClosed", "OpenClosed", "ClosedOpen"]
