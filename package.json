  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js --production",
    "compile": "tsc --noEmit",
    "compile:tests": "tsc -p ./",
    "watch": "node esbuild.config.js --watch",
    "pretest": "npm run compile && npm run compile:tests && npm run build && npm run lint",
    "test": "vscode-test",
    "coverage": "c8 --reporter=html --reporter=text npm run test",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "package": "vsce package",
    "clean": "rm -rf dist out coverage .nyc_output",
    "prepare": "husky"
  },
