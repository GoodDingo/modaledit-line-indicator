          "type": "object",
          "scope": "resource",
          "description": "Normal mode decoration configuration. Supports ALL DecorationRenderOptions properties. Theme-specific overrides: 'dark', 'light', 'darkHC', 'lightHC'. Cascading fallback: darkHC → dark → common → defaults; lightHC → light → common → defaults.",
          "default": {
            "backgroundColor": "rgba(255, 255, 255, 0)",
            "border": "2px dotted #00aa00"
          },
          "properties": {
            "backgroundColor": {
              "type": "string",
              "description": "Background color (CSS color, rgba(), or VS Code theme color reference)"
            },
