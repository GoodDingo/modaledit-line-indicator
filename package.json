    "type": "git",
    "url": "https://github.com/GoodDingo/modaledit-line-indicator.git"
  },
  "bugs": {
    "url": "https://github.com/GoodDingo/modaledit-line-indicator/issues"
  },
  "homepage": "https://github.com/GoodDingo/modaledit-line-indicator#readme",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "https://github.com/GoodDingo/modaledit-line-indicator/issues",
